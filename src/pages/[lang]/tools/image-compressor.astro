---
import ToolLayout from "../../../layouts/ToolLayout.astro";
import ImageCompressor from "../../../components/tools/ImageCompressor.astro";

export function getStaticPaths() {
  return [{ params: { lang: "en" } }, { params: { lang: "fr" } }];
}

const { lang } = Astro.params;

const content = {
  en: {
    title: "Private Image Compressor",
    description: "Compress JPG, PNG, WEBP images locally. No server uploads.",
    category: "Image",
    labels: {
      uploadTitle: "Drag & Drop or Click to Upload",
      uploadDesc: "JPG, PNG, WEBP. 100% Client-Side. No Server Uploads.",
      original: "Original",
      compressed: "Compressed Preview",
      quality: "Image Quality",
      download: "Download Compressed Image",
      loading: "Compressing...",
    },
    seo: {
      h2: "Why compress images locally?",
      p1: "Most online image compressors upload your files to a cloud server to process them. This creates privacy risks and slows down the process with upload/download times. <strong>NanoKito Image Compressor</strong> runs entirely in your browser using WebAssembly technology.",
      p2: "It's faster, more secure, and works even when you're offline. Perfect for sensitive documents or high-resolution photography.",
    },
  },
  fr: {
    title: "Compresseur d'Image Privé",
    description:
      "Compressez vos images JPG, PNG, WEBP localement. Sans envoi au serveur.",
    category: "Image",
    labels: {
      uploadTitle: "Glisser-déposer ou cliquer pour télécharger",
      uploadDesc: "JPG, PNG, WEBP. 100% Côté Client. Aucun transfert serveur.",
      original: "Original",
      compressed: "Aperçu Compressé",
      quality: "Qualité d'image",
      download: "Télécharger l'image",
      loading: "Compression en cours...",
    },
    seo: {
      h2: "Pourquoi compresser localement ?",
      p1: "La plupart des compresseurs en ligne envoient vos fichiers sur un serveur cloud. Cela crée des risques pour la vie privée et ralentit le processus. <strong>Le Compresseur NanoKito</strong> fonctionne entièrement dans votre navigateur.",
      p2: "C'est plus rapide, plus sécurisé, et fonctionne même hors ligne. Parfait pour les documents sensibles ou la photographie haute résolution.",
    },
  },
};

const t = content[lang as "en" | "fr"];
---

<ToolLayout
  title={`${t.title} | NanoKito`}
  description={t.description}
  toolName={t.title}
  category={t.category}
  categorySlug="image"
  lang={lang as "en" | "fr"}
>
  <ImageCompressor labels={t.labels} />

  <div slot="content">
    <h2>{t.seo.h2}</h2>
    <p set:html={t.seo.p1} />
    <p set:html={t.seo.p2} />
  </div>
</ToolLayout>
