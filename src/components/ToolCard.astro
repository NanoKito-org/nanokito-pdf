---
import { ArrowRight } from "lucide-react";
import CategoryBadge from "./CategoryBadge.astro";

interface Props {
    title: string;
    description: string;
    href: string;
    category: string;
}

const { title, description, href, category } = Astro.props;
---

<a
    href={href}
    data-tool-card
    data-title={title.toLowerCase()}
    data-description={description.toLowerCase()}
    class="group relative bg-white/70 dark:bg-gray-900/50 backdrop-blur-md border border-white/20 dark:border-gray-800/50 rounded-xl p-6 hover:shadow-xl hover:shadow-yellow-500/10 hover:border-yellow-400 hover:-translate-y-1 transition-all duration-300 flex flex-col h-full overflow-hidden"
>
    <div
        class="mb-4 inline-flex p-3 rounded-lg bg-yellow-400/10 text-amber-600 dark:text-yellow-400 group-hover:bg-yellow-400/20 group-hover:scale-110 transition-all duration-300 w-fit"
    >
        <slot name="icon" />
    </div>

    <div class="mb-4">
        <CategoryBadge>
            {category}
        </CategoryBadge>
        <h3
            class="text-xl font-bold text-gray-900 dark:text-gray-100 group-hover:text-amber-600 dark:group-hover:text-yellow-400 transition-colors mt-2"
        >
            {title}
        </h3>
    </div>

    <p
        class="text-gray-600 dark:text-gray-400 text-sm flex-1 mb-6 leading-relaxed"
    >
        {description}
    </p>

    <div
        class="flex items-center text-sm font-medium text-amber-600 dark:text-yellow-400 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300 mt-auto"
    >
        Try now <ArrowRight className="w-4 h-4 ml-1" />
    </div>
</a>
