---
interface Props {
  active?: boolean;
  class?: string;
}

const { active = false, class: className = "" } = Astro.props;
---

<span
  class:list={[
    "inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold uppercase tracking-wider transition-colors duration-300",
    active
      ? "bg-yellow-400/10 text-yellow-500 border border-yellow-400/20"
      : "bg-slate-800 text-slate-300 border border-transparent",
    className,
  ]}
>
  <slot />
</span>
