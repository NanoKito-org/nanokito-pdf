---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import { getLangFromUrl } from "../i18n/utils";

import ThemeScript from "../components/ThemeScript.astro";

interface Props {
	title: string;
	description?: string;
}

const lang = getLangFromUrl(Astro.url);
const { title, description = "Privacy-First Tools. No Server Uploads." } =
	Astro.props;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<ThemeScript />
		<title>{title} | NanoKito</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:tight,wght@400;500;600;700&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body
		class="bg-[var(--color-background)] text-[var(--color-foreground)] min-h-screen flex flex-col font-sans antialiased selection:bg-[var(--color-primary)]/20 selection:text-[var(--color-primary)] relative overflow-x-hidden"
	>
		{/* Global Aurora Background */}
		<div class="fixed inset-0 -z-50 pointer-events-none">
			{/* Grid Pattern */}
			<div
				class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px] [mask-image:radial-gradient(ellipse_80%_50%_at_50%_0%,#000_70%,transparent_100%)]"
			>
			</div>

			{/* Moving Blobs */}
			<div
				class="absolute top-0 left-1/4 w-96 h-96 bg-yellow-400/20 rounded-full blur-[100px] animate-blob mix-blend-multiply dark:mix-blend-screen opacity-30 dark:opacity-20"
			>
			</div>
			<div
				class="absolute top-0 right-1/4 w-96 h-96 bg-orange-400/20 rounded-full blur-[100px] animate-blob [animation-delay:2s] mix-blend-multiply dark:mix-blend-screen opacity-30 dark:opacity-20"
			>
			</div>
			<div
				class="absolute -bottom-32 left-1/3 w-96 h-96 bg-slate-400/20 rounded-full blur-[100px] animate-blob [animation-delay:4s] mix-blend-multiply dark:mix-blend-screen opacity-30 dark:opacity-20"
			>
			</div>
		</div>

		<Header />
		<main class="flex-1 w-full">
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		--font-sans: "Inter", system-ui, sans-serif;
	}
	body {
		font-family: var(--font-sans);
	}
</style>
